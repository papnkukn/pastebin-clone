<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/bootstrap.min.css" />
  <title>Pastebin</title>
</head>
<body style="background: #eee;">
  <form action="/<%= id %>" method="post" enctype="multipart/form-data">
  
    <div class="container-fluid mt-3">
    
      <div class="row">
        <div class="col-12 d-flex">
          <h3 class="text-monospace">Pastebin <a href="/<%= id %>" class="text-primary text-monospace"><%= id %></a></h3>          
          <div class="ml-auto">
            <% if (typeof mode == "string" && mode == "edit") { %><button id="btnDelete" name="delete" class="btn btn-sm btn-danger" type="submit" accesskey="x">Delete</button><% } %>
            <a href="/" class="btn btn-sm btn-outline-primary" accesskey="q">New</a>
            <!--<% if (typeof mode == "string" && mode == "edit") { %><a href="/<%= id %>/duplicate" class="btn btn-sm btn-outline-secondary" accesskey="d">Duplicate</a><% } %>-->
            <% if (typeof meta == "object" && meta && meta.filename) { %><a href="/<%= id %>/download" class="btn btn-sm btn-outline-secondary">Download</a><% } %>
            <% if (typeof mode == "string" && mode == "new") { %><label class="btn btn-sm btn-outline-secondary mb-0"><span id="lblBrowse">Browse</span> <input name="file" type="file" accept="*/*" style="display: none !important;" onchange="onFileChange(this)"></label><% } %>
            <button id="btnSave" name="save" class="btn btn-sm btn-success" type="submit" accesskey="s">Save</button>
          </div>
        </div>
        <div class="col-12">
          <div class="form-group">
            <textarea autofocus name="content" placeholder="Paste some text..." rows="35" class="form-control text-monospace w-100 h-100"><%= content %></textarea>
          </div>
        </div>
      </div>
      
    </div>
    
  </form>
  
  <script>
    function onFileChange(e) {
      document.getElementById("lblBrowse").innerText = e.value.replace(/^.*[\\\/]([^\\\/]+)$/g, "$1");
      document.getElementById("btnSave").innerText = "Upload";
    }
    
    <% if (typeof message == "string" && message && message.trim().length > 0) { %>alert("<%= message %>")<% } %>
  </script>
</body>
</html>